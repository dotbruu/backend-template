{
  "name": "template",
  "version": "1.0",
  "description": "backend template",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/main/server/index.js",
    "migration:generate": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:generate ./src/main/config/database/migrations/default",
    "migration:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:run",
    "migration:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:revert",
    "test": "jest --silent --runInBand",
    "test:watch": "cross-env NODE_ENV=development jest --watch",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "pino-prettier": "^1.0.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "pino": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11"
  }
}
